POSTGRES_CONTAINER_NAME=postgres_db
POSTGRES_IMAGE_NAME=docker.io/postgres
POSTGRES_IMAGE_VERSION=16.1-alpine
POSTGRES_PORT=5432
POSTGRES_ROOT_PASSWORD=kong
POSTGRES_USER=kong
